extends layout

block content
 .container
 form(action='/api/login-register', method='post')
  div
    label First Name:
    input(type='text', name='first_name')
  div
    label Last Name:
    input(type='text', name='last_name')
  div
    label Email:
    input(type='email', name='email')
    br
  div
    label Password:
    input(type='password', name='password')
  div
    input(type='submit', value='Submit')