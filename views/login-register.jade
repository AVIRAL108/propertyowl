extends layout

block content
 .container
            .row
              .col-md-4.col-md-offset-4
                // Tab
                .my-account.style-1.margin-top-5.margin-bottom-40
                  ul.tabs-nav
                    li
                      a(href='#tab1') Log In
                    li
                      a(href='#tab2') Register
                  .tabs-container.alt
                    // Login
                    #tab1.tab-content
                      form.login(method='post' action = 'api/login-register')
                        p.form-row.form-row-wide
                          label(for='username')
                            | Username:
                            i.im.im-icon-Male
                            input#username.input-text(type='text', name='username', value='')
                        p.form-row.form-row-wide
                          label(for='password')
                            | Password:
                            i.im.im-icon-Lock-2
                            input#password.input-text(type='password', name='password')
                        p.form-row
                          input.button.border.margin-top-10(type='submit', name='login', value='Login')
                          label.rememberme(for='rememberme')
                            input#rememberme(name='rememberme', type='checkbox', value='forever')
                            |  Remember Me
                        p.lost_password
                          a(href='#') Lost Your Password?
                          a(href='/auth/google' class='btn btn-danger') Google
                          a(href='/auth/facebook' class='btn btn-danger') Facebook
                    // Register
                    #tab2.tab-content(style='display: none;')
                      form.register(method='post')
                        p.form-row.form-row-wide
                          label(for='username2')
                            | Username:
                            i.im.im-icon-Male
                            input#username2.input-text(type='text', name='username', value='')
                        p.form-row.form-row-wide
                          label(for='email2')
                            | Email Address:
                            i.im.im-icon-Mail
                            input#email2.input-text(type='text', name='email', value='')
                        p.form-row.form-row-wide
                          label(for='password1')
                            | Password:
                            i.im.im-icon-Lock-2
                            input#password1.input-text(type='password', name='password1')
                        p.form-row.form-row-wide
                          label(for='password2')
                            | Repeat Password:
                            i.im.im-icon-Lock-2
                            input#password2.input-text(type='password', name='password2')
                        p.form-row
                          input.button.border.fw.margin-top-10(type='submit', name='register', value='Register')
 form(action='/api/register', method='post')
  div
    label First Name:
    input(type='text', name='first_name')
  div
    label Last Name:
    input(type='text', name='last_name')
  div
    label Email:
    input(type='email', name='email')
    br
  div
    label Password:
    input(type='password', name='password')
  div
    input(type='submit', value='Submit')